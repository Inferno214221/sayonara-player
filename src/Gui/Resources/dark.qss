QWidget
{
    color: #d8d8d8;
    background: #3c3c3c;
    selection-background-color: #6b7aaa;
}

QWidget:focus {
    outline: none;
}

QWidget:disabled {
    color: #5f5f5f;
}

QGroupBox {
    border: none;
    padding-top: 2ex;
    font-weight: bold;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0 3px;
}

QFrame {
    border-bottom: 1px solid qlineargradient(x1:0, y1:0, x2:1, y2:0, stop: 0 rgba(0, 0, 0, 0), stop: 0.3 #242424, stop: 0.7 #242424, stop: 1.0 rgba(0, 0, 0, 0));
}

#headerFrame {
    padding: 0;
    background-repeat: no-repeat;
    border: none;
}

QStackedWidget {
    border: none;
}

QSplitter {
    border: none;
}

QSplitter::handle {
    margin: 1px;
}

QSplitter::handle:vertical {

    image: url(':/Icons/splitter_ver.svg');
}

QSplitter::handle:horizontal {

    image: url(':/Icons/splitter_hor.svg');
}

Gui--MiniSearcher {
    background-color: rgba(50, 50, 50, 216);
    border: 1px solid #1a1a1a;
    border-radius: 2px;
}

Gui--MiniSearcher QLineEdit {
    min-width: 1em;
}

QAbstractItemView::item {
	color: #d8d8d8;
}

QListView,
QTableView,
QTreeView,
QListWidget,
QTreeWidget,
Library--View,
Library--ItemView,
Library--GenreView,
IconThemeScrollWidget {
    border: 1px solid #282828;
    color: #d8d8d8;
    background-color: #282828;
    alternate-background-color: #242424;
    selection-background-color: #424e72;
}

Library--CoverView {
    background: url(':/Icons/bg.png');
}

QListView:focus,
QTableView:focus,
QTreeView:focus,
QListWidget:focus,
QTreeWidget:focus {
    border: 1px solid #424e72;
}

QListView::item:selected,
QTableView::item:selected,
QTreeView::item:selected,
QTreeView::branch:selected {
    color: #d8d8d8;
    background: #424e72;
    border-bottom: 1px solid #202030;
}

QTreeView::branch {
    border: none;
    border-image: none;
}


QTreeView::branch:has-children:!has-siblings:closed,
QTreeView::branch:has-children:has-siblings:closed {
    image: url(':/Icons/arrow_filled_right.svg');
}

QTreeView::branch:open:has-children:!has-siblings,
QTreeView::branch:open:has-children:has-siblings {
    image: url(':/Icons/arrow_filled_down.svg');
}

QScrollBar:vertical {
    margin: 0;
    padding-left: 2px;
    padding-right: 1px;
    padding-top: 2px;
    padding-bottom: 2px;
    width: 2.4ex;
    max-width: 24px;
    background: #323232;
    border-left: 1px solid #242424;
}

QScrollBar::sub-line:vertical,
QScrollBar::add-line:vertical,
QScrollBar::add-page:vertical,
QScrollBar::sub-page:vertical {
    background: rgba(0, 0, 0, 0);
}

QScrollBar::handle:vertical {
    background: #484848;
    border: 1px solid #323232;
    min-height: 4ex;
    margin: 1px;
}

QScrollBar::handle:vertical:hover,
QScrollBar::handle:vertical:pressed {
    background: #404040;
}

QScrollBar:horizontal {
    margin: 0;
    padding-top: 2px;
    padding-bottom: 1px;
    padding-left: 2px;
    padding-right: 2px;
    height: 2.4ex;
    max-height: 24px;
    background: #323232;
    border-top: 1px solid #242424;
}

QScrollBar::sub-line:horizontal,
QScrollBar::add-line:horizontal,
QScrollBar::sub-page:horizontal,
QScrollBar::add-page:horizontal {
    background: rgba(0, 0, 0, 0);
}

QScrollBar::handle:horizontal {
    background: #484848;
    border: 1px solid #323232;
    min-width: 3em;
    margin: 1px;
}

QScrollBar::handle:horizontal:hover,
QScrollBar::handle:horizontal:pressed {
    background: #404040;
}

QHeaderView::section {
    background: #3c3c3c;
    color: #d8d8d8;
    border: 0;
    border-bottom: 1px solid #242424;
    border-right: 1px solid #242424;
}

QHeaderView::section:last {
    border-right: none;
}

QMenuBar {
    border-bottom: 1px solid #282828;
}

QMenuBar::item {
    padding: 0.5ex 0.5em;
    background: rgba(0, 0, 0, 0);
}

QMenuBar::item:selected {
    background: #424e72;
    border: 1px solid #202020;
}

QMenu {
    border: 1px solid #202020;
    background-color: #383838;
    padding: 1ex 0 1ex 0;
}

QMenu::item {
    padding: 0.5ex 2em 0.5ex 1.5em;
    background-color: rgba(0, 0, 0, 0);
}

QMenu::item:selected {
    border-top: 1px solid #202020;
    border-bottom: 1px solid #202020;
    background: #424e72;
}

QMenu::icon,
QMenu::indicator {
    /* position: absolute; */
    left: 0.5em;
}

QMenu::indicator:checked {
    image: url(':/Icons/tool_orange.svg');
}

QMenu::indicator:unchecked {
    image: url(':/Icons/tool_dark_grey.svg');
}

QMenu::indicator:unchecked:pressed {
    image: url(':/Icons/tool_grey.svg');
}

QMenu::separator {
    height: 1px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop: 0 rgba(0, 0, 0, 0), stop: 0.3 #242424, stop: 0.7 #242424, stop: 1.0 rgba(0, 0, 0, 0));
    margin: 3px 5px;
}

Gui--ContextMenu,
Library--ContextMenu {
    margin-top: 0;
}

QLabel {
    border: none;
    background: rgba(0, 0, 0, 0);
}

QScrollArea {
    border: 1px solid #282828;
    background: rgba(0, 0, 0, 0);
}

#tabTagScrollArea {
    border: none;
}

QRadioButton,
QCheckBox,
QComboBox,
QLineEdit,
QSpinBox,
QTextEdit,
QPlainTextEdit,
QPushButton {
    padding: 3px;
    height: 4ex;
}

QComboBox,
QLineEdit,
QSpinBox,
QTextEdit,
QPlainTextEdit,
QPushButton[flat=false] {
    border: 1px solid #2B2B2B;
    border-radius: 2px;
    background: #505050;
}

QComboBox,
QLineEdit,
QSpinBox,
QTextEdit,
QPlainTextEdit {
    min-width: 5em;
}

QComboBox:hover,
QComboBox:editable:focus,
QLineEdit:hover,
QSpinBox:hover,
QPlainTextEdit:hover,
QPushButton:hover[flat=false],
QPushButton:pressed[flat=false],
QLineEdit:focus,
QSpinBox:focus,
QTextEdit:hover,
QTextEdit:focus,
QPlainTextEdit:hover,
QPlainTextEdit:focus,
QPlainTextEdit:focus,
QToolButton:hover,
QToolButton:focus {
    border: 1px solid #e8841a;
}

QPushButton:focus[flat=false] {
    color: #e8841a;
}

QLineEdit:disabled,
QTextEdit:disabled,
QPlainTextEdit:disabled,
QSpinBox:disabled {
    background: #383838;
    color: #525252;
}

QComboBox {
    padding-right: 2em;
}

QComboBox::drop-down {
    width: 4.5ex;
    max-width: 50px;
    border-left: 1px solid #242424;
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}

QComboBox::down-arrow {
    height: 1ex;
    width: 0.5em;
    padding: 2px;
    image: url(':/Icons/arrow_down.svg');
}

QComboBox QAbstractItemView,
QComboBox QAbstractItemView:focus {
    background-color: #484848;
    border: 1px solid #202020;
    selection-background-color: #424e72;
    margin: 0 0;
    padding: 0 0;

}

QComboBox QAbstractItemView::item:focus,
QComboBox QAbstractItemView::item:selected {
    border-top: 1px solid #383838;
    border-bottom: 1px solid #383838;
    background: #424e72;
}

QComboBox:disabled {
    border: 1px solid #303030;
    background: #424242;
}

#ControlPlayButton,
#ControlRecButton,
#ControlFwdButton,
#ControlBwdButton,
#ControlStopButton {
    border-image: url(':/Icons/dark_bg.svg');
}


#ControlPlayButton:hover,
#ControlRecButton:hover,
#ControlFwdButton:hover,
#ControlBwdButton:hover,
#ControlStopButton:hover {
    background-color: qradialgradient(cx: 0.5, cy: 0.5, radius: 0.54, fx: 0.5, fy: 0.5, stop: 0.45 rgba(243, 132, 26, 255), stop: 1 rgba(255, 255, 255, 0));
}

#ControlPlayButton:pressed,
#ControlRecButton:pressed,
#ControlRecButton:checked,
#ControlFwdButton:pressed,
#ControlBwdButton:pressed,
#ControlStopButton:pressed {
    background-color: qradialgradient(cx: 0.5, cy: 0.5, radius: 0.54, fx: 0.5, fy: 0.5, stop: 0.8 rgba(243, 132, 26, 255), stop: 1 rgba(255, 255, 255, 0));
}

QPushButton[flat=false] {
    padding-left: 0.6em;
    padding-right: 0.6em;
}

QPushButton[flat=false]:checked {
    border: 1px solid #e8841a;
    background: #323232;
}

QPushButton[flat=false]:disabled {
    border: 1px solid #303030;
    background: #424242;
}

QPushButton[flat=false]:pressed {
    background: #505050;
}

QSpinBox:focus {
    padding-right: 15px;
}

QSpinBox::up-button {
    subcontrol-origin: margin;
    subcontrol-position: top right;
    width: 1em;
    margin-top: 1px;
    margin-right: 1px;
    padding: 2px;
    background: #383838;
}

QSpinBox::up-button:hover {
    background: #525252;
}

QSpinBox::up-arrow {
    image: url(':/Icons/arrow_up.svg');
    width: 1ex;
    height: 1ex;
}

QSpinBox::down-button {
    subcontrol-origin: border;
    subcontrol-position: bottom right;
    padding: 2px;
    margin-bottom: 1px;
    margin-right: 1px;
    width: 1em;
    background: #383838;
}

QSpinBox::down-button:hover {
    background: #525252;
}

QSpinBox::down-arrow {
    image: url(':/Icons/arrow_down.svg');
    width: 1ex;
    height: 1ex;
}

QTabWidget::pane {
    background-color: #383838;
    border: 1px solid #2c2c2c;
    top: -1px;
}

QTabBar::tab {
    background-color: #3c3c3c;
    border: 1px solid #2c2c2c;
    border-bottom: none;
    border-top-left-radius: 1px;
    border-top-right-radius: 1px;
    padding: 1ex 1.5ex;
}

QTabBar::tab:selected,
QTabBar::tab:hover {
    background-color: #505050;
}

QTabBar::tab:!selected {
    border-bottom: 1px solid #2c2c2c;
}

QTabBar::tab:selected {
    border-bottom: 1px solid #383838;
}

QTabBar::close-button {
    image: url(':/Icons/tool_dark_grey_small.svg');
}

QTabBar::close-button:disabled {
    image: none;
}

QTabBar::close-button:hover {
    image: url(':/Icons/tool_grey_small.svg');
}

QTabBar QToolButton {
    background: #3c3c3c;
    padding-top: 1ex;
    padding-bottom: 1ex;
    border: none;
}

QTabBar QToolButton:hover {
    border: none;
}


QTabBar QToolButton::right-arrow {
    padding-top: 0.5ex;
    padding-bottom: 0.5ex;
    image: url(:/Icons/arrow_right.svg);
}

QTabBar QToolButton::left-arrow {
    padding-top: 0.5ex;
    padding-bottom: 0.5ex;
    image: url(':/Icons/arrow_left.svg');
}

QTabBar QToolButton::right-arrow:hover {
    image: url(':/Icons/arrow_right_orange.svg');
}

QTabBar QToolButton::left-arrow:hover {
    image: url(':/Icons/arrow_left_orange.svg');
}

QTabBar QToolButton::right-arrow:disabled {
    image: url(':/Icons/arrow_right_disabled.svg');
}

QTabBar QToolButton::left-arrow:disabled {
    image: url(':/Icons/arrow_left_disabled.svg');
}

QTabBar::tear {
    width: 0;
}

QCheckBox:hover,
QCheckBox:focus {
    color: #e8841a;
}

QRadioButton::indicator,
QCheckBox::indicator {
    padding: 5px 1px;
    width: 2ex;
    height: 2ex;
}

QRadioButton::indicator:checked,
QRadioButton::indicator:pressed,
QCheckBox::indicator:checked:enabled,
QCheckBox::indicator:pressed {
    image: url(':/Icons/tool_orange.svg');
}

QRadioButton::indicator:unchecked,
QCheckBox::indicator:unchecked {
    image: url(':/Icons/tool_dark_grey.svg');
}

QRadioButton::indicator:unchecked:hover,
QCheckBox::indicator:unchecked:hover {
    image: url(':/Icons/tool_grey.svg');
}

QRadioButton::indicator:disabled,
QCheckBox::indicator:disabled {
    image: url(':/Icons/tool_disabled.svg');
}

QProgressBar {
    border: 2px solid #2B2B2B;
    border-radius: 2px;
    max-height: 3ex;
    background: #828282;
    text-align: center;
    color: #f8f8f8;
}

QProgressBar::chunk {
    background-color: #424e72;
    width: 0.5ex;
    margin: 0.1ex;
}

#loadingBar {
    border: 1px solid #202020;
    background: #282828;
    color: rgba(0, 0, 0, 0);
    padding-top: 2px;
    padding-bottom: 2px;
}

#loadingBar::chunk {
    width: 1em;
    background: #e8841a;
    margin: 0;
}

QBalloonTip {
    background-color: #3c3c3c;
    color: #e8841a;
}

QToolTip {
    padding: 2px;
    background: #424e72;
    color: white;
    border: 1px solid #282828;
}

RatingLabel:focus {
    border: 1px solid #e8841a;
}

CoverButton,
#btnCover {
    background: rgba(0, 0, 0, 0);
    border: none;
    padding: 0;
    margin: 0;
}

CoverButton:hover,
#btnCover:hover {
    border: 1px solid #e8841a;
}

#StackedReloadLibraryWidget,
#EmptyLibraryCentralWidget,
#DirectoryViewNoLibraryWidget {
    background: rgba(50, 50, 50, 196);
    border: 1px solid #282828;
}

#CompleterPopup {
    border: 1px solid #e8841a;
    border-top: none;
}

#PreferenceButton {
    border: none;
    background: rgba(0, 0, 0, 0);
    color: #e8841a;
}

#PreferenceButton:hover {
    text-decoration: underline;
}

#qt_calendar_navigationbar {
    background: #282828;
    font-weight: bold;
    min-height: 4ex;
}
